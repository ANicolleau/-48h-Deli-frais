extends ../../home.pug
block content
    h1 Producteurs

    ul
        each user in users
            h2
            a(href=`producers/${user.id}`)= user.firstname + ' ' + user.lastname
            li= user.email
            li= user.password
            li= user.city
            li= user.zipCode
            li= user.street
            li= user.phoneNumber
            each producer in producers
                if user.id === producer.userId
                    li= producer.description