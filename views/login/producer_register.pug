extends ../home.pug

block content
    h1 S'enregistrer

    form(method='POST', action='/producers')
        div.form-group
            label(for='firstname') Prénom:
            input#firstname.form-control(type='text', placeholder='Prénom', name='firstname')
        div.form-group
            label(for='lastname') Nom:
            input#lastname.form-control(type='text', placeholder='Nom', name='lastname')
        div.form-group
            label(for='email') Courriel:
            input#email.form-control(type='email', placeholder='votre@courriel.com', name='email')
        div.form-group
            label(for='city') Ville:
            input#city.form-control(type='text', placeholder='bourg-palette', name='city')
        div.form-group
            label(for='address') Adresse:
            input#address.form-control(type='text', placeholder='123 rue de la paix', name='address')
        div.form-group
            label(for='zipcode') Code Postal:
            input#zipcode.form-control(type='text', placeholder='33000', name='zipcode')
        div.form-group
            label(for='phone_number') Numéro de Téléphone:
            input#phone_number.form-control(type='text', placeholder='Numéro de téléphone', name='phone_number')
        div.form-group
            label(for='pw') Mot de passe:
            input#pw.form-control(type='password', name='password')
        div.form-group
            label(for='pw2') Confirmer le Mot de Passe:
            input#pw2.form-control(type='password', name='confirmPassword')
        div.producer
            p Êtes vous un producteur ? Dites nous en plus
        div.form-group
            label(for='category') Catégorie:
            select#category.form-control(name='category')
                each category in producer_category
                    option(type='text' name='label', value=category.id)=category.label
        div.form-group
            label(for='description') Description:
            input#description.form-control(type='text', placeholder='Si vous voulez rajouter des précisions', name='description')
        div.form-group
            label(for='products') Produits:
            input#products.form-control(type='text', placeholder='Votre production', name='products')
        button.btn.btn-primary(type='submit') S'enregistrer